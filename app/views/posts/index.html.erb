
<div id="posts">
  <% @posts.each do|post| %>
  <div id="post">
    <h3>
      <%= post.id %>.
      <%= post.title %>
    </h3>
    <%= simple_format post.body %>
    By
      <%= post.autor %>
    on
      <%= post.created_at.to_formatted_s(:short) %>
      <small>
	<%= link_to 'Edit', edit_post_path(post) %> |
	<%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
      </small>
  </div>
  <% end %>
</div>

<%= paginate @posts %>

<div id="link">
  <%= link_to 'New Post', new_post_path %>
</div>