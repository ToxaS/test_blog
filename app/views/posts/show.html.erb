<div id="show">
  <p id="notice"><%= notice %></p>
    <%= @post.id %>.
  By 
    <%= @post.autor %>
  on 
    <%= @post.created_at.to_formatted_s(:short) %>
    
  <p>
    <strong>Title:</strong>
    <%= @post.title %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= @post.body %>
  </p>
  <p>
    <strong>Tags:</strong>
    <%= @post.tags.map(&:name).to_sentence %>
  </p>
</div>


<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
